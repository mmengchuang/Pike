<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xdlteam.pike.login.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/loginbackground" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/select_act_login_tv"
                android:gravity="center"
                android:padding="15dp"
                android:text="账号"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/act_login_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/select_act_login_et"
                android:hint="请输入手机号或邮箱"
                android:padding="15dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/select_act_login_tv"
                android:gravity="center"
                android:padding="15dp"
                android:text="密码"
                android:textSize="18sp" />


            <EditText
                android:inputType="textPassword"
                android:id="@+id/act_login_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/select_act_login_et"
                android:hint="6-16个字符"
                android:padding="15dp" />


        </LinearLayout>

        <Button
            android:onClick="loginClick"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/act_login_btn"
            android:textSize="18sp"
            android:textColor="#999999"
            android:text="登录"
            android:background="@drawable/select_act_login_et"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></View>


        <TextView
            android:onClick="registerClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="新用户   点击注册"
            android:textColor="#3F51B5"
            />
<!---->
    </LinearLayout>
</LinearLayout>
