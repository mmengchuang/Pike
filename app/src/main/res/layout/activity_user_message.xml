<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_user_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@null"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/act_register_bg"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/act_register_back"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="昵称"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:textStyle="italic"
                        />
                </LinearLayout>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/activity_user_message_iv_touxiang"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/act_register_xiangji"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="30dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/activity_user_message_iv_touxiang"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="70dp"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_marginStart="25dp">
                    <TextView
                        android:layout_marginLeft="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉丝"
                        android:textSize="16sp"
                        />
                    <View
                        android:layout_marginLeft="15dp"
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="#5000"
                        ></View>
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"
                        android:textSize="16sp"
                        />
                </LinearLayout>
                <Button
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toEndOf="@+id/activity_user_message_iv_touxiang"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/user_message_btn_bg"
                    android:text="编辑个人资料"
                    android:textColor="#ff9d00"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="点击此处添加个人介绍"
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorText"
                    />
            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/activity_user_message_tv_zuopin"
                android:clickable="true"
                android:onClick="onSelectClick"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ff9d00"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="作品"
                />
            <TextView
                android:id="@+id/activity_user_message_tv_yinsi"
                android:clickable="true"
                android:onClick="onSelectClick"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#818181"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="隐私"
                />
            <TextView
                android:id="@+id/activity_user_message_tv_xihuan"
                android:clickable="true"
                android:onClick="onSelectClick"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#818181"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="喜欢"
                />

        </LinearLayout>

            <GridView
                android:id="@+id/activity_user_message_gv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3"
                android:background="#e6e6e6"
                >
            </GridView>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
